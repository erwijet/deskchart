{
    "compilerOptions": {
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "target": "ESNext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": ["DOM", "DOM.Iterable", "ES2024"],
        "paths": {
            "server/*": ["./server/*"],
            "shared/*": ["./app/shared/*"],
            "components/*": ["./app/shared/components/*"],
            "~*": ["./app/*"]
        }
    }
}
